{
  "name": "YouTube notificator",
  "version": "1.0",
  "description": "Notificate when your favorite youtuber uploads a video.",
  "manifest_version": 2,
  "author":"izanbf1803",
  "icons": {
     "16": "src/icon16.png",
     "48": "src/icon48.png",
     "128": "src/icon128.png"
            },
  "browser_action": {
    "default_title": "YouTube notificator",
    "default_icon": "src/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "src/background.html"
  },
  "permissions": [
  	"notifications",
    "storage",
    "tabs",
    "http://*/*", "https://*/*",
    "cookies",
    "https://www.youtube.com/*"
  ],
  "web_accessible_resources": [
    "src/icon48.png"
  ]
}